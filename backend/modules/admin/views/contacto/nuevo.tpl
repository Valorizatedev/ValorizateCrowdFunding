<form id="form1" method="POST" enctype="multipart/form-data" action="{$_layoutParams.root}admin/contacto/nuevo">	<div class="row" >		<div class="col-md-13">			<div class="col-md-6" >				<font class="brand" style="font-size:22px;" ><b>Crear contacto</b></font>											</div>			<div class="col-md-6" align="right">							<button class="btn btn-blue"><i class="icon-ok"> </i> Crear contacto</button>            <a class="btn btn-primary" href="{$_layoutParams.root}admin/contacto">Cancelar</a>			</div>				</div>				</div>	<hr>	
    <div>        <input class="form-control"  type="hidden" name="guardar" value="1" />        <table class="" style="width: 100%;">            <tr>                <th class="etiqueta"><b>Nombre: </b></th>                <td colspan="5">                    <input class="form-control"  type="text" id="nombre" name="nombre" value="" required="true" />                </td>            </tr>            <tr>                <th class="etiqueta"><b>Fecha de nacimiento:</b></th>                <td>                    <input class="form-control"  type="text" name="fecha_nacimiento" id="fecha_nacimiento" />                </td>            </tr>            <tr>                <th class="etiqueta"><b>Estado civil:</b></th>                <td>                    <select  class="form-control"  id='ecivil' name='ecivil' required="true">                        <option value="">Elija el Estado Civil</option>                        {foreach $ecivil as $nombre}                            <option value="{$nombre.eci_key}">{$nombre.eci_nombre}</option>                        {/foreach}                    </select>                </td>                            <th class="etiqueta"><b>Numero de hijos:</b></th>                <td>                    <input class="form-control"  id="hijos" type="text" name="hijos" value="0"/>                </td>                            <th class="etiqueta"><b>Genero: </b></th>                <td>                    <select  class="form-control"  name='genero' id="genero" required="true">                        <option value="">Elija el Genero</option>                        {foreach $generos as $nombre}                            <option value="{$nombre.gen_key}">{$nombre.gen_nombre}</option>                        {/foreach}                    </select>                </td>            </tr>            <tr>                <th class="etiqueta"><b>Direcci&oacute;n:</b></th>                <td colspan="5">                    <input class="form-control"  id="direccion" type="text" name="direccion" value="" required="true" />                </td>            </tr>            <tr>               <th class="etiqueta"><b>Departamento de residencia: </b></th>
              <td colspan="2">                    <select  class="form-control"  id='departamentoRes' name='departamentoRes' required="true">                        <option value="">Elija el Departamento Residencia</option>                        {foreach $departamento as $nombre}                            <option value="{$nombre.dep_key}">{$nombre.dep_nombre}</option>                        {/foreach}                    </select>                </td>                            <th class="etiqueta"><b>Ciudad de residencia: </b></th>                <td colspan="2">                   <select  class="form-control"  id='ciudadRes' name='ciudadRes' required="true">                        <option value="">Elija Primero del Departamento</option>                    </select>                </td>            </tr>            <tr>                <th class="etiqueta"><b>Tel&eacute;fono: </b></th>                <td colspan="2">                     <input class="form-control"  id="telefono" type="text" name="telefono" value="" required="true" />                </td>                           <th class="etiqueta"><b>E-mail: </b></th>                <td colspan="2">                    <input class="form-control"  id="email" type="email" name="email" value="" />                </td>            </tr>        </table>        <br/>		<table width="100%">		      <tr>                <th class="etiqueta"><b>Observaciones: </b></th>			  </tr>			  <tr>                <td>                    <textarea style ="width:100%;height:70px;"id="observaciones" name="observaciones"></textarea>                </td>			 </tr>		</table>    </div></form>