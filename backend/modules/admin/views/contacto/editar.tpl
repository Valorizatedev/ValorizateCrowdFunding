<form id="form1" enctype="multipart/form-data" method="POST" action="{$_layoutParams.root}admin/contacto/editar/{$cliente.con_key}">
    <input class="form-control"  type="hidden" name="guardar" value="1" />		<div class="row" >		<div class="col-md-13">			<div class="col-md-6" >				<font class="brand" style="font-size:22px;" ><b>Editar Contacto</b></font>											</div>			<div class="col-md-6" align="right">							 <button class="btn btn-blue"><i class="icon-ok"> </i> Guardar cambios</button>				 <a class="btn btn-primary" href="{$_layoutParams.root}admin/contacto">Cancelar</a>			</div>				</div>				</div>	<hr>	
    <table style="width: 100%;" cellpadding="8">			<tr>                <th class="etiqueta"><b>Nombre: </b></th>                <td colspan="5">                    <input class="form-control"  type="text" id="nombre" name="nombre" value="{$cliente.con_nombre}" required="true" />                </td>            </tr>            <tr>                <th class="etiqueta"><b>Fecha de nacimiento:</b> </th>                <td colspan="">                    <input class="form-control"  type="text" name="fecha_nacimiento" id="fecha_nacimiento" value="{$cliente.con_fecha_nacimiento}" />                </td>            </tr>            <tr>                <th class="etiqueta"><b>Estado: </b></th>                <td>                    <select  class="form-control"  id='ecivil' name='ecivil' required="true">                        <option value="">Elija el estado Civil</option>                        {foreach $ecivil as $nombre}                            <option value="{$nombre.eci_key}" {if $nombre.eci_key==$cliente.eci_key}selected{/if}>{$nombre.eci_nombre}</option>                        {/foreach}                    </select>                </td>                            <th class="etiqueta"><b>Numero de hijos: </b></th>                <td>                    <input class="form-control"  id="hijos" type="text" name="hijos" value="{$cliente.con_hijos}"/>                </td>                            <th class="etiqueta"><b>Genero: </b></th>                <td>                    <select  class="form-control"  name='genero' id="genero" required="true">                        <option value="">Elija el Genero</option>                        {foreach $generos as $nombre}                            <option value="{$nombre.gen_key}" {if $nombre.gen_key==$cliente.gen_key}selected{/if}>{$nombre.gen_nombre}</option>                        {/foreach}                    </select>                </td>            </tr>            <tr>                <th class="etiqueta"><b>Direcci&oacute;n: </b></th>                <td colspan="5">                    <input class="form-control"  id="direccion" type="text" name="direccion" value="{$cliente.con_direccion}" required="true" />                </td>            </tr>            <tr>                <th class="etiqueta"><b>Departamento: </b></th>                <td colspan="2">                    <select  class="form-control"  id='departamentoRes' name='departamentoRes' required="true">                        {foreach $departamento as $nombre}                            <option value="{$nombre.dep_key}" {if $nombre.dep_key==$ciudadRes.dep_key}selected{/if}>{$nombre.dep_nombre}</option>                        {/foreach}                    </select>                </td>                            <th class="etiqueta"><b>Ciudad: </b></th>                <td colspan="2">                    <select  class="form-control"  id='ciudadRes' name='ciudadRes' required="true">                        <option value="{$ciudadRes.ciu_key}">{$ciudadRes.ciu_nombre}</option>                    </select>                </td>            </tr>            <tr>                <th class="etiqueta"><b>Tel&eacute;fono: </b></th>                <td colspan="2">                    <input class="form-control"  id="telefono" type="text" name="telefono" value="{$cliente.con_telefono}" required="true" />                </td>                            <th class="etiqueta"><b>E-mail: </b></th>                <td colspan="2">                    <input class="form-control"  id="email" type="email" name="email" value="{$cliente.con_email}" />                </td>            </tr>                        <br/>		<table width="100%">	<tr>                <th class="etiqueta"><b>Observaciones:</b> </th>				</tr>				<tr>                <td>                    <textarea id="observaciones" class="from-control" style ="width:100%;height:70px;" name="observaciones">{$cliente.con_observaciones}</textarea>                </td>            </tr>    </table></form>