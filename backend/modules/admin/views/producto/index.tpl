<div>	<div class="row" >		<div class="col-md-13">			<div class="col-md-4" >				<font class="brand" style="font-size:22px;" ><b>Productos</b></font>											</div>			<div class="col-md-4" >						<div class="col-md-5 pull-right" >						{if $_acl->permiso('crear_producto')}					<!--a href="javascript:$('#modal-3').modal('show');" class="btn btn-blue" > Nuevo producto</a-->					<a class="btn btn-blue" href="{$_layoutParams.root}admin/producto/nuevo" formmethod="POST"><i class="icon-plus"> </i> Nuevo Producto</a>				{/if}			</div>				</div>			<div class="col-md-4 pull-right" >											<div class="input-group" >					<div class="input-group-addon">						<i class="entypo-search"></i>					</div>						<input type="text" class="form-control" name="buscar" id="buscar"  placeholder="Buscar">					</div>			</div>		</div>	</div>	<hr>
<table class="table table-bordered table-hover" align="center" style="width: 100%;">
    <tr>        <th>Referencia</th>        <th>Nombre</th>        <th>Valor</th>        <th colspan=""></th>    </tr>    {foreach $productos as $producto}        <tr>            <td>                {$producto.pro_referencia}            </td>            <td>                {$producto.pro_nombre}            </td>            <td>                $ {number_format($producto.pro_valor,0,',','.')}            </td>            <td class="opcion" align="right">                <a class="btn btn-primary" href="{$_layoutParams.root}admin/producto/detalles/{$producto.pro_key}"><i class="icon-eye-open"> </i> Detalles</a>            {if $_acl->permiso('modificar_producto')}                    <a class="btn btn-primary" href="{$_layoutParams.root}admin/producto/editar/{$producto.pro_key}"><i class="icon-pencil"> </i> Modificar</a>            {/if}            {if $_acl->permiso('eliminar_producto')}                    <a class="btn btn-danger" href="{$_layoutParams.root}admin/producto/eliminar/{$producto.pro_key}"><i class="icon-trash"> </i> Eliminar</a>            {/if}			</td>        </tr>    {/foreach}</table><div class="col-md-12 pull-right" >		<div align="right" >		{$paginacion|default:""}	</div>	</div>