<form id="form1" method="POST" enctype="multipart/form-data" action="{$_layoutParams.root}inventario/producto/editar/{$productos.pro_key}">    <input class="form-control"  type="hidden" name="guardar" value="1" /><div class="row" >		<div class="col-md-13">			<div class="col-md-6" >				<font class="brand" style="font-size:22px;" ><b>Editar producto</b></font>											</div>			<div class="col-md-6" align="right">							<button class="btn btn-blue"><i class="icon-ok"> </i> Guardar cambios</button>					<a class="btn btn-primary" href="{$_layoutParams.root}inventario/producto">Cancelar</a>			</div>				</div>				</div>	<hr>    <table class="" style="width: 100%;">        <tr>            <th class="etiqueta"><b>Nombre: </b></th>            <td><input class="form-control"  type="text" name="nombre" value="{$productos.pro_nombre|default:""}" required="true" /></td>        </tr>        <tr>            <th class="etiqueta"><b>Referencia: </b></th>            <td><input class="form-control"  type="text" name="referencia" value="{$productos.pro_referencia|default:""}" required="true" /></td>        </tr>                <tr>            <th class="etiqueta"><b>Valor: </b></th>            <td><input class="form-control"  type="text" name="valor" id="valor" value="{number_format($productos.pro_valor,0,',','.')|default:""}" required="true" /></td>        </tr>         <tr>            <th class="etiqueta"><b>Valor al publico: </b></th>            <td><input class="form-control"  type="text" name="valor_cliente" id="valor_cliente" value="{number_format($productos.pro_valor_venta,0,',','.')|default:""}" required="true" /></td>        </tr>        <tr>            <th class="etiqueta"><b>Cantidad:</b> </th>            <td><input class="form-control"  type="text" name="cantidad" id="cantidad" value="{$productos.pro_cantidad|default:""}" required="true" /></td>        </tr>		<tr>            <th class="etiqueta"><b>Descripci&oacute;n: </b></th>		</tr>		<tr>            <td colspan="2"><textarea class="form-control" style="width:100%;height:70px;" name="descripcion" >{$productos.pro_descripcion|default:""}</textarea>        </tr>    </table>    <br/>    </form>